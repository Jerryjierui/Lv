<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lut.project.Mapper.LoginMapper" >
    <insert id="insertUser">
        insert into java_test.tb_user(userName,userEmail,userPassword)
        values (#{userName},#{userEmail},#{userPassword})
    </insert>

    <select id="searchUser" resultType="com.lut.project.Entity.User">
        select * from java_test.tb_user where userEmail = #{userEmail}
                                          and userPassword = #{userPassword}
    </select>
    <select id="findUser" resultType="com.lut.project.Entity.User">
        select * from java_test.tb_user where userEmail = #{userEmail}
                                          or userEmail = #{userEmail}
    </select>
</mapper>